- body_classes << "issue issue_edit"

%h1 Edit Issue

- form_for :issue, @issue, :url => admin_issues_url, :method => :put, :html => {:multipart => true} do |f|

  = render :partial => "form", :locals => { :f => f, :issue => @issue }
  
